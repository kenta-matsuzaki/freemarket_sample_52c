.wrapper-show
  = render partial:"shared/header"
  .section
    %h1.section__item-name
      = @item.name

    .section__main
      .section__main__box__owl-carousel
        .section__main__box__owl-carousel__stage
          .section__main__box__owl-carousel__stage__outer
            .section__main__box__owl-carousel__stage__outer__active
              .section__main__box__owl-carousel__stage__outer__active__item-inner{ id: 'main' }
            -#     -# - @images.each do |image|

            -#       = image_tag @item.image, alt: "商品画像", class: "owl-lazy"
            -# .section__main__box__owl-carousel__stage__outer__inner{ id: 'owls' }
            -#   - @images.each do |image|
            -#     = image_tag image.text, alt: "サムネイル画像", class: "owl-lazy-sub"



            -# .section__main__box__owl-carousel__stage__outer__active
            -#   .section__main__box__owl-carousel__stage__outer__active__item-inner{ id: 'main' }
            -#     -# = image_tag @item.image, alt: "商品画像", class: "owl-lazy"
            -# .section__main__box__owl-carousel__stage__outer__inner{ id: 'owls' }
            -#     -# = image_tag @item.image, alt: "サムネイル画像", class: "owl-lazy-sub"



      /ここまでで左半分の商品写真部分

      .table
        .table__tr
          .table__tr__th
            .table__tr__th__exhibitor
              %span 出品者
          .table__tr__td
            .table__tr__td__exhibitor-name
            =link_to mypage_path, class:"link-to-exhibitor" do
              %span
                -# = @item.user.nickname
            .table__tr__td__face-icon
              .table__tr__td__face-icon__good
                = image_tag "good.png", class: "good"
              .table__tr__td__face-icon__face-count
                999
              .table__tr__td__face-icon__normal
                = image_tag "normal.png", class: "normal"
              .table__tr__td__face-icon__face-count
                999
              .table__tr__td__face-icon__bad
                = image_tag "bad.png", class: "bad"
              .table__tr__td__face-icon__face-count
                999
        .table__tr
          .table__tr__th
            .table__tr__th__category
              %span カテゴリー
          .table__tr__td
            .table__tr__td__category-right
              .table__tr__td__category-right-l
              =link_to "#", class:"link-to-category" do
                %span メンズ
              .table__tr__td__category-right-m
              =link_to "#", class:"link-to-category" do
                %i.fa.fa-chevron-right トップス
              .table__tr__td__category-right-s
              =link_to "#", class:"link-to-category" do
                %i.fa.fa-chevron-right シャツ
        .table__tr
          .table__tr__th-brand-following
            .table__tr__th-brand-following__left
              %span ブランド
          .table__tr__td-brand-following
            .table__tr__td-brand-following__right
              %p
                = @item.brand&.name
        .table__tr
          .table__tr__th-brand-following
            .table__tr__th-brand-following__left
              %span 商品のサイズ
          .table__tr__td-brand-following
            .table__tr__td-brand-following__right
              %span
              = @item&.size
        .table__tr
          .table__tr__th-brand-following
            .table__tr__th-brand-following__left
              %span 商品の状態
          .table__tr__td-brand-following
            .table__tr__td-brand-following__right
              %span 目立った傷や汚れあり
        .table__tr
          .table__tr__th-brand-following
            .table__tr__th-brand-following__left
              %span 配送料の負担
          .table__tr__td-brand-following
            .table__tr__td-brand-following__right
              %span
                = @item.delivery_charge
        .table__tr
          .table__tr__th-brand-following
            .table__tr__th-brand-following__left
              %span 配送の方法
          .table__tr__td-brand-following
            .table__tr__td-brand-following__right
              %span ほぼ人力
        .table__tr
          .table__tr__th-brand-following
            .table__tr__th-brand-following__left
              %span 配送元地域
          .table__tr__td-brand-following
            .table__tr__td-brand-following__right-region
            =link_to "#", class:"link-to-region" do
              %span ブラジル
        .table__tr
          .table__tr__th-brand-following
            .table__tr__th--brand-following__left
              %span 発送日の目安
          .table__tr__td-brand-following
            .table__tr__td-brand-following__right
              %span
              = @item.delivery_days

        /↓ここから料金表示
    .section__item-price
      %span.section__item-price__yen
        = converting_to_mark(@item.price)
      %span.section__item-price__tax
        (税込)
      %span.section__item-price__shipping-fee
        = @item.delivery_charge

    .btn
      .btn__buy-button
      =link_to items_buy_path, class:"link-to-buy" do
        .btn__buy-button__text
          購入画面に進む
    .section__item-description
      .section__item-description__text
        %span.section__item-description__text__field
          = @item.description
    .section__item-bottom
      .section__item-bottom__content
        .section__item-bottom__content__good
          .btn.item-good-button
            %i.fa.fa-heart
            いいね！
        .section__item-bottom__content__report
          .btn.item-report-button
            %i.fa.fa-flag
            不適切な商品の報告
        .section__item-bottom__content__approach
          .section__item-bottom__content__approach__text
          =link_to "#", class:"safe-and-secure-initiatives" do
            %i.fa.fa-lock
            あんしん・あんぜんへの取り組み
  .section-bottom
    .section-bottom__area
      .section-bottom__area-description
        相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
        /ここにform_for入る予定
    .section-bottom__area-comment-field
      %input.comment-field-default{name: "redirect_url_key", type: "hidden", value: "item_detail"}
      = text_area :name, type: "text", class: "comment-box"
    .btn
      .btn__comment
        .btn__comment__button
        =link_to "#", class:"link-to-comment" do
          コメントする

  .section-nav
    .section-nav__item
      .section-nav__item__left
      =link_to "#", class:"link-to-prev" do
        %i.fa.fa-chevron-left
        スカイタワーSKT-1
    .section-nav__item
      .section-nav__item__right
      =link_to "#", class:"link-to-next" do
        キタムラ フェルトトートバッグ
        %i.fa.fa-chevron-right

  .section-social
    .section-social__icons
      .section-social__icons__box
        .section-social__icons__box__facebook
        =link_to "#", class:"link-to-sns" do
          = image_tag "facebook_icon.png", alt: "facebookアイコン ", class: "icons"
        .section-social__icons__box__twitter
        =link_to "#", class:"link-to-sns" do
          = image_tag "twitter_icon.png", alt: "twitterアイコン ", class: "icons"
        .section-social__icons__box__line
        =link_to "#", class:"link-to-sns" do
          = image_tag "line_icon.png", alt: "lineアイコン ", class: "icons"
        .section-social__icons__box__pinterest
        =link_to "#", class:"link-to-sns" do
          = image_tag "pinterest_icon.png", alt: "pinterestアイコン ", class: "icons"

  .section-profile
    .section-profile__text
      .section-profile__text__box
      -# =link_to "#{current_user.nickname}さんのその他の出品", "#", class:"link-to-profile"

  .section-other
    .section-other__items
      .section-other__items__box
      =link_to "#", class:"link-to-other-items" do
        = image_tag "item.jpg", alt: "その他のアイテム", class: "other-items"
        .section-other__items__box-description
          春画だよー
          .section-other__items__box-description__price
            ¥ 2,680
          .section-other__items__box-description__tax
            (税込)
  = render partial:"aside"
  = render partial:"footer"



